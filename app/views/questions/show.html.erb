<div class="question-list">
	<%= render partial: "questions/info", locals: {question: @question} %>
	<ul class="comments">
		<% @question.comments.each do |comment| %>
		<%= render partial: "comments/show", locals: {comment: comment} %>
		<% end %>
		<li><%= link_to 'Add a comment', {controller: 'comments', action: 'new', type: 'Question', id: @question} %></li>
	</ul>
	<hr class="top">
	<h2 class="answers-header"><%= @question.answers.count %> Answers</h2>
	<hr class="bottom">
	<ul>
		<% @question.answers.each do |answer| %>
		<%= render partial: "answers/show", locals: {answer: answer} %>
		<ul class="comments">
			<% answer.comments.each do |comment| %>
			<%= render partial: "comments/show", locals: {comment: comment, question: @question} %>
			<% end %>
			<li><%= link_to 'Add a comment', new_comment_path %></li>
		</ul>
		<% end %>
	</ul>

	<div class="back">
		<%= link_to 'Back', questions_path %>
	</div>

	<%= render partial: "answers/new", locals: {answer: @answer} %>
</div>
